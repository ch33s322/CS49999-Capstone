<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Printer.ViewModel"  
        xmlns:printerModel="clr-namespace:Printer.Model" 
        xmlns:jobModel="clr-namespace:MyWpfApp.Model"
        xmlns:fsvm="clr-namespace:FileSystem.ViewModel"    
        xmlns:fsm="clr-namespace:FileSystemItemModel.Model" 
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="DocReformed" Height="720" Width="1280"
        Background="Transparent"
        >


    <Grid>
        <Border Background="White">

            <Viewbox Stretch="Uniform" StretchDirection="Both" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <TabControl Width="1260" Height="684" Margin="10,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" SelectionChanged="TabControl_SelectionChanged">

                    <TabItem>
                        <TabItem.Header>
                            <DockPanel LastChildFill="True" VerticalAlignment="Center">
                                <TextBlock Text=" Print Job Manager" VerticalAlignment="Center" Margin="0,0,0,0"/>
                            </DockPanel>
                        </TabItem.Header>
                        <Grid Margin="0,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="106*"/>
                                <ColumnDefinition Width="100*"/>
                                <ColumnDefinition Width="463*"/>
                            </Grid.ColumnDefinitions>
                            <!--Select Printer Drop down Start-->
                            <ComboBox Name="PrinterSelect" 
                                      ItemsSource="{Binding AvailablePrinters}"  
                                      DisplayMemberPath="Name" 
                                      VerticalAlignment="Top" 
                                      HorizontalAlignment="Left" 
                                      Margin="10,10,0,0" 
                                      Text="Select Printer" 
                                      FontSize="16" 
                                      IsEditable="True" 
                                      IsReadOnly="True" 
                                      SelectionChanged="PrinterSelectSelectionChanged" 
                                      Height="31" 
                                      Width="141">
                                <ComboBox.DataContext>
                                    <vm:PrinterViewModel/>
                                </ComboBox.DataContext>



                            </ComboBox>
                            <!--Select Printer Drop down End-->

                            <CheckBox Name="SimplexDuplexCheckBox" Checked="SimplexDuplexCheckBoxChecked" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="9,26,0,0" Height="14" Width="15" RenderTransformOrigin="0.733,-2.067" Grid.Column="1" Visibility="Collapsed"/>

                            <!--Send job Button Start-->
                            <Button Name="SendJob"
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Left"
                                    FontSize="16" 
                                    Margin="47,10,0,0" 
                                    Click="SendJobClick" 
                                    RenderTransformOrigin="0.5,-0.845" 
                                    Grid.Column="1" 
                                    Width="105"
                                    Padding="4,4" Height="31">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" RenderTransformOrigin="-0.245,0.527">
                                    <StackPanel.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="-0.039"/>
                                            <TranslateTransform X="0" Y="0.054"/>
                                        </TransformGroup>
                                    </StackPanel.RenderTransform>
                                    <fa:IconBlock Icon="PaperPlane"
                                                  Width="20"
                                                  Height="20"
                                                  Margin="0,0,6,0"/>
                                    <TextBlock Text="Send Job" Width="84" Height="26"/>
                                </StackPanel>
                            </Button>
                            <!--Send Job Button End-->

                            <Label x:Name="checkboxLabel" Content="Duplex" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="164,16,0,0" Height="27" Width="63" FontSize="15" TextBlock.TextAlignment="Center" Grid.ColumnSpan="2" Visibility="Collapsed"/>

                            <TreeView Name="fileTreeView" Margin="10,54,895,0" ItemsSource="{Binding RootItems}" Grid.ColumnSpan="3">
                                <TreeView.DataContext>
                                    <fsvm:FileSyetemViewModel/>
                                </TreeView.DataContext>
                                <TreeView.Resources>
                                    <!--Folder Template-->
                                    <HierarchicalDataTemplate DataType="{x:Type fsm:FileSystemItem}" ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- FontAwesome Icon -->
                                            <fa:IconBlock Icon="{Binding Item}" Foreground="{Binding IconColor}" Width="16" Height="16" Margin="0,0,5,0" IconFont="{Binding IconFont}"/>
                                            <!-- Name Text -->
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.Resources>
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
                                        <Setter Property="IsExpanded" Value="true" />
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>

                            <GroupBox Margin="10,0,0,0" Header="Job Queue Manager" BorderThickness="1" Grid.Column="2">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <DataGrid Name="PrintJobManager" 
                                              ItemsSource="{Binding AvailablePrinters}" 
                                              VerticalAlignment="Stretch" 
                                              HorizontalAlignment="Stretch"
                                              SelectionMode="Single"
                                              SelectionUnit="Cell"
                                              SelectionChanged="PrintJobManager_SelectionChanged"
                                              AutoGenerateColumns="False"
                                              RowDetailsVisibilityMode="Visible"
                                              CanUserAddRows="False"
                                              IsReadOnly="True"
                                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <DataGrid.Resources>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                                        </DataGrid.Resources>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Printer Name" Binding="{Binding Name}" Width="Auto"/>
                                            <DataGridTemplateColumn Header="Job Details" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ItemsControl ItemsSource="{Binding Jobs}" AlternationCount="2">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Margin="0,0,0,5">
                                                                        <StackPanel.ContextMenu>
                                                                            <ContextMenu>
                                                                                <MenuItem Header="View Job" Click="RightClickGetJob"/>
                                                                                <MenuItem Header="Remove Job" Click="RightClickGetJob"/>
                                                                                <MenuItem Header="Move Job" Click="RightClickMoveJob"/>
                                                                            </ContextMenu>
                                                                        </StackPanel.ContextMenu>
                                                                        <Border Padding ="5,0,0,0" Background="LightGray">
                                                                            <TextBlock Text="{Binding orgPdfName}" FontWeight="Bold"/>
                                                                        </Border>
                                                                        <ItemsControl ItemsSource="{Binding fileNames}" AlternationCount="2">
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Border>
                                                                                        <Border.Style>
                                                                                            <Style TargetType="Border">
                                                                                                <Setter Property="Background" Value="White"/>
                                                                                                <Style.Triggers>
                                                                                                    <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), 
                                                                                                      RelativeSource={RelativeSource AncestorType=ContentPresenter}}" 
                                                                                                        Value="1">
                                                                                                        <Setter Property="Background" Value="LightGray"/>
                                                                                                    </DataTrigger>
                                                                                                </Style.Triggers>
                                                                                            </Style>
                                                                                        </Border.Style>
                                                                                        <Button 
                                                                                            Padding="15,0,0,0"
                                                                                            HorizontalAlignment="Stretch"
                                                                                            HorizontalContentAlignment="Left"
                                                                                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                                                                            <Button.Content>
                                                                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                                                    <fa:IconBlock Icon="File" Foreground="Black" Width="16" Height="12" Margin="0,0,5,0" IconFont="Regular"/>
                                                                                                    <TextBlock Text="{Binding .}" VerticalAlignment="Center"/>
                                                                                                </StackPanel>
                                                                                            </Button.Content>
                                                                                            <Button.ContextMenu>
                                                                                                <ContextMenu>
                                                                                                    <MenuItem Header="Print Job"  Click="RightClickGetFile" Tag="{Binding .}"/>
                                                                                                    <MenuItem Header="Remove Job" Click="RightClickGetFile"/>
                                                                                                    <MenuItem Header="View Job" Click="RightClickGetFile"/>
                                                                                                    <MenuItem Header="Move Job" Click="RightClickGetFile"/>
                                                                                                </ContextMenu>
                                                                                            </Button.ContextMenu>
                                                                                        </Button>
                                                                                    </Border>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                        <!---
                                                        <TreeView Name="JobDetailsTreeView"
                                                                  ItemsSource="{Binding Jobs}">
                                                            <TreeView.Resources>
                                                                <HierarchicalDataTemplate DataType="{x:Type printerModel:Printer}" 
                                                                  ItemsSource="{Binding Jobs}">
                                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="DarkGreen"/>
                                                                </HierarchicalDataTemplate>

                                                                <DataTemplate DataType="{x:Type jobModel:Job}">
                                                                    <StackPanel>
                                                                        <StackPanel.ContextMenu>
                                                                            <ContextMenu>
                                                                                <MenuItem Header="View Job" Click="RightClickGetJob"/>
                                                                                <MenuItem Header="Remove Job" Click="RightClickGetJob"/>
                                                                                <MenuItem Header="Move Job" Click="RightClickMoveJob"/>
                                                                            </ContextMenu>
                                                                        </StackPanel.ContextMenu>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="Job: "/>
                                                                            <TextBlock Text="{Binding orgPdfName}" 
                                                                                       Foreground="Black"/>
                                                                        </StackPanel>


                                                                        <ItemsControl ItemsSource="{Binding fileNames}" Margin="15,0,0,0" AlternationCount="2">
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Button Content="{Binding .}" 
                                                                                            Padding="0"
                                                                                            HorizontalAlignment="Left"
                                                                                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                                                                        <Button.ContextMenu>
                                                                                            <ContextMenu>
                                                                                                <MenuItem Header="Print Job"  Click="RightClickGetFile" Tag="{Binding .}"/>
                                                                                                <MenuItem Header="Remove Job" Click="RightClickGetFile"/>
                                                                                                <MenuItem Header="View Job" Click="RightClickGetFile"/>
                                                                                                <MenuItem Header="Move Job" Click="RightClickGetFile"/>
                                                                                            </ContextMenu>
                                                                                        </Button.ContextMenu>
                                                                                    </Button>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </TreeView.Resources>
                                                        </TreeView>-->
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>

                                        <DataGrid.DataContext>
                                            <vm:PrinterViewModel/>
                                        </DataGrid.DataContext>
                                    </DataGrid>
                                </ScrollViewer>
                            </GroupBox>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Settings">
                        <!-- (Unchanged) -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="201*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Settings content unchanged -->
                            <Label Content="Input Directory" Margin="0,0,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                            <TextBox Name="InputDir" MinWidth="220" MinHeight="18" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" Margin="52,5,0,0" FontSize="12" TextChanged="DirectorySelectTextChanged" Grid.Column="1"/>
                            <Label Content="Archive Directory" Margin="0,44,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                            <TextBox Name="archiveDirTextBox" MinWidth="220" MinHeight="18" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" Margin="52,49,0,0" FontSize="12" Grid.Column="1" />
                            <Label Content="Job Directory" Margin="0,66,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                            <TextBox Name="jobDirTextBox" MinWidth="220" MinHeight="18" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" Margin="52,71,0,0" FontSize="12" Grid.Column="1" />
                            <Label Content="Add Printer" Margin="0,90,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                            <ComboBox Name="printerPickComboBox" MinWidth="200" MinHeight="22" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="52,94,0,0" FontSize="12" Grid.Column="1"/>
                            <Button Name="AddPrinterButton" Content="Add" MinWidth="60" MinHeight="22" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="262,94,0,0" Click="AddPrinterButton_Click" Grid.Column="1"/>
                            <Label Content="Remove Printer" Margin="0,120,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                            <ComboBox Name="currentPrinterPickComboBox" ItemsSource="{Binding AvailablePrinters}"  DisplayMemberPath="Name" MinWidth="200" MinHeight="22" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="52,120,0,0" FontSize="12" Grid.Column="1">
                                <ComboBox.DataContext>
                                    <vm:PrinterViewModel/>
                                </ComboBox.DataContext>
                            </ComboBox>
                            <Button Name="RemovePrinterButton" Content="Remove" MinWidth="60" MinHeight="22" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="262,120,0,0" Click="RemovePrinterButton_Click" Grid.Column="1"/>
                            <Label Content="Max Pages per Split" Margin="0,150,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                            <TextBox Name="MaxPagesTextBox" MinWidth="100" MinHeight="18" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" Margin="150,150,0,0" FontSize="12" Grid.Column="1"/>
                            <Button Name="ApplyMaxPagesButton" Content="Apply" MinWidth="60" MinHeight="22" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="262,150,0,0" Click="ApplyMaxPagesButton_Click" Grid.Column="1"/>
                            <TextBlock Name="MaxPagesValidationLabel" Foreground="Red" Margin="52,176,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Viewbox>
        </Border>
    </Grid>
</Window>
