<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MyWpfApp.ViewModel"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">

    <Window.DataContext>
        <vm:PrinterViewModel/>
    </Window.DataContext>
    <Grid>
        <ComboBox Name="PrinterSelect" Height="39" Width="154" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,9,0,0" Text="Select Printer" FontSize="20" IsEditable="True" IsReadOnly="True" SelectionChanged="PrinterSelectSelectionChanged"></ComboBox>

        <CheckBox Name="SimplexDuplexCheckBox" Checked="SimplexDuplexCheckBoxChecked" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="229,21,0,0" Height="15" Width="15"/>

        <Button Name="SendJob" Width="100" Height="39"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Content="Send Job" FontSize="20" Margin="249,9,0,0" Click="SendJobClick"/>

        <Button Name="Add" Width="100" Height="39"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Content="Add" FontSize="20" Margin="249,62,0,0" Click="AddClick"/>

        <TextBox Name="DirectorySelect" Width="234" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" Margin="10,62,0,0" FontSize="20" TextChanged="DirectorySelectTextChanged"/>
        <Label x:Name="checkboxLabel" Content="Duplex" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="173,12,0,0" Height="27" Width="63" FontSize="15" TextBlock.TextAlignment="Center"/>

        <DataGrid Name="DirectoryViewer"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,106,0,0" Width="339" Height="588">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Icon" Binding="{Binding Icon}" Width="50"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="File Type" Binding="{Binding FileType}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Height="684" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="354,0,0,0" Header="Job Queue Manager" BorderThickness="1" Width="916">
            <DataGrid Name="PrintJobManager" 
                      ItemsSource="{Binding AvailablePrinters}" 
                      Height="674" Width="900" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Left" 
                      SelectionChanged="PrintJobManager_SelectionChanged"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Printer" Binding="{Binding Name}" Width="50"/>
                    <DataGridTextColumn Header="File Name"  Width="200"/>
                    <DataGridTextColumn Header="File Type"  Width="100"/>
                    <DataGridTextColumn Header="Pages"  Width="50"/>
                    <DataGridTextColumn Header="Status"  Width="50"/>
                </DataGrid.Columns>
                
                
            </DataGrid>
            
        </GroupBox>

    </Grid>
</Window>
